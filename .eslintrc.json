{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["**/*.cy.js"],
      "env": {
        "cypress/globals": true
      },
      "plugins": ["cypress"],
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "cypress/no-unnecessary-waiting": "off",
        "no-unused-vars": "off",
        "cypress/unsafe-to-chain-command": "off"
      }
    },
    {
      "files": ["**/*.test.js", "**/*.spec.js"], // adjust the pattern to match your Jest test files
      "env": {
        "jest/globals": true
      },
      "extends": ["plugin:jest/recommended"],
      "plugins": ["jest"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
